---
import { SEO, type Props as SEOProps } from "astro-seo";

import "../styles/global.css";

interface Props {
  seo?: {
    title?: string;
    tabTitle?: string;
    description?: string;
    pubDate?: string;
  };
}

const { seo = {} } = Astro.props;
const title = seo.title ?? "Josiah Winslow solves Advent of Code";

const groupedSeo: SEOProps = {
  title: seo.tabTitle ?? title,
  description: (
    seo.description ?? "Josiah Winslow's solutions for Advent of Code."
  ),
}

const copyrightYear = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">

  {/* Favicon */}
  <link rel="icon" type="image/ico" href="/images/favicon.ico" sizes="32x32">

  {/* CSS */}
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/holiday.css@0.11.2">
  {/* Custom fonts */}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300..700&display=swap" rel="stylesheet">

  {/* JavaScript */}
  {/* Nothing here yet */}

  {/* Bootstrap icons */}
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

  {/* Meta tags */}
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="generator" content={Astro.generator}>

  <SEO {...groupedSeo} />
</head>

<body>
  <header>
    <h2>
      <a href="/">Josiah Winslow solves Advent of Code</a>
    </h2>
  </header>

  <main>
    <slot>
  </main>

  <footer>
    <div id="footer-text">
      &copy; {copyrightYear} <a href="https://winslowjosiah.com">Josiah Winslow</a>.
      <br>
      Powered by <a href="https://astro.build">Astro</a>.
      Styled with <a href="https://holidaycss.js.org">holiday.css</a>.
      <br>
      Icons provided by <a href="https://icons.getbootstrap.com">Bootstrap Icons</a>.
    </div>
    <div id="footer-socials">
      <a href="mailto:winslowjosiah@gmail.com" title="Email" aria-label="Email">
        <i class="bi bi-envelope-fill"></i>
      </a>
      <a href="https://github.com/WinslowJosiah" title="GitHub" aria-label="GitHub">
        <i class="bi bi-github"></i>
      </a>
      <a href="https://twitter.com/WinslowJosiah" title="Twitter" aria-label="Twitter">
        <i class="bi bi-twitter"></i>
      </a>
      <a href="https://hachyderm.io/@winslowjosiah"
          title="Mastodon (Hachyderm.io)"
          aria-label="Mastodon (Hachyderm.io)"
          rel="me">
        <i class="bi bi-mastodon"></i>
      </a>
      <a href="https://paypal.me/WinslowJosiah" title="PayPal" aria-label="PayPal">
        <i class="bi bi-paypal"></i>
      </a>
    </div>
  </footer>
</body>

</html>
